{% extends 'AdminBundle::base.html.twig' %}

{% block pageTitle %}Lista Tagów {% endblock %}

{% block adminContent %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-default">
                    <div class="panel-heading">Tagi</div>
                    <div class="panel-body">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th><a class="sortable" href="#">Nazwa</a></th>
                                    <th><a class="sortable sort-desc" href="#">Ilość postów przypisanych</a></th>
                                    <th class="actions">Akcje</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for tag in allTag %}
                                <tr>
                                    <td>{{ tag.id }}</td>
                                    <td><a href="#">{{ tag.name }}</a></td>
                                    <td>9</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('addTag') }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                            <a href="{{ path('deleteTag') }}" class="btn btn-danger" data-confirmAction=""><span class="glyphicon glyphicon-trash"></span></a>
                                        </div>
                                    </td>
                                </tr>
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>

                        <ul class="pagination pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>  <!-- .panel-body -->
                </div>  <!-- .panel -->
            </div> <!-- .col-md-12 -->
        </div> <!-- .row -->
    </div> <!-- .container -->

{% endblock %}