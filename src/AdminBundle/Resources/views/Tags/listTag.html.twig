{% extends 'AdminBundle::base.html.twig' %}

{% block pageTitle %}Lista Tagów {% endblock %}

{% block adminContent %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-default">
                    <div class="panel-heading">Tagi</div>
                    <div class="panel-body">

                        <ul class="nav nav-pills">
                            <li><a class="btn btn-primary" href="{{ path('addTag') }}">Dodaj nowy</a></li>
                        </ul>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>{{ knp_pagination_sortable(allTag, 'ID', 't.id') }}</th>
                                    <th>{{ knp_pagination_sortable(allTag, 'Nazwa', 't.name') }}</th>
                                    <th>{{ knp_pagination_sortable(allTag, 'Ilość przypisanych postów', 'projectCount') }}</th>
                                    <th class="actions">Akcje</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for row in allTag %}
                                {% set tag = row[0] %}
                                <tr>
                                    <td>{{ tag.id }}</td>
                                    <td><a href="{{ path('addTag', {'id': tag.id}) }}">{{ tag.name }}</a></td>
                                    <td>{{ row['projectCount'] }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('addTag', {'id': tag.id}) }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                            <a href="{{ path('deleteTag', {'id': tag.id}) }}" onclick="return confirm('Na pewno chcesz usunąć ten tag?')" class="btn btn-danger" data-confirmAction=""><span class="glyphicon glyphicon-trash"></span></a>
                                        </div>
                                    </td>
                                </tr>
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>

                        {{ knp_pagination_render(allTag, 'PortfolioBundle:Pagination:pagination.html.twig') }}

                    </div>  <!-- .panel-body -->
                </div>  <!-- .panel -->
            </div> <!-- .col-md-12 -->
        </div> <!-- .row -->
    </div> <!-- .container -->

{% endblock %}